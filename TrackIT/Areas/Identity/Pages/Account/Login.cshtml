@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@*<h1>@ViewData["Title"]</h1>*@
<div class="text-center login-background" style="max-width: 400px; background-color: #DDFFEF; padding: 10px; margin: 0 auto;  border: solid; border-width: thin; box-shadow: 5px 10px 8px #888888; border-color: limegreen;">
    <div class="row text-center"> 
        <div class="text-center login-center-it" style="margin: 0 auto; width: 80%;">
            <section>
                <form id="account" method="post">
                    <br />
                    <h4 class="text-center">
                        TrackIT
                    </h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success col-md-12">LOG IN</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <button type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Resend email confirmation</button>
                        </p>
                    </div>
                </form>
                <br /><br />
            </section>
        </div>
